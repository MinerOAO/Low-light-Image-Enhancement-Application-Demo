<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemo.Views.SelectPage"
             Title="SelectPage">
    <AbsoluteLayout>
        <Image
                x:Name="SelectedImage"
                SemanticProperties.Description="Image"
                HorizontalOptions="Center"
            />
        <Button
                x:Name="SelectBtn"
                Text="Select"
                SemanticProperties.Hint="Select image from device storage"
                Clicked="OnSelectClicked"
                HorizontalOptions="Center" />
        <Button
                x:Name="PhotoBtn"
                Text="Shot"
                SemanticProperties.Hint="Take a photo"
                Clicked="OnPhotoClicked"
                HorizontalOptions="End" />
    </AbsoluteLayout>
</ContentPage>